{
  "name": "Simshare",

  "description": "Simple text sharing",

  "version": "0.0.1",

  "scripts": {
    "local_test": "node node_modules/istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha \"./tests/mocha/*.js\"",
    "doc_backend": "node node_modules/jsdoc/jsdoc.js -c ./doc/jsdoc_config_backend.js --readme readme.MD",
    "doc_frontend": "node node_modules/jsdoc/jsdoc.js -c ./doc/jsdoc_config_frontend.js --readme readme.MD",
    "doc": "npm run doc_backend && npm run doc_frontend"
  },

  "engines" : {
    "node" : ">=0.8"
  },

  "dependencies": {
    "express": "4.12.4",
    "ezlog": "0.0.15",
    "ws": "0.7.2",
    "compression": "1.4.4",
    "jsdoc": "3.3.0"
  },

  "devDependencies": {
    "mocha": "2.2.5",
    "istanbul": "0.3.14",
    "coveralls": "2.11.2",
    "jasmine": "2.3.1"
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/opensoars/simshare"
  },

  "readmeFilename": "README.md"
}